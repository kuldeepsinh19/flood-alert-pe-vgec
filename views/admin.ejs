<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form Submissions</title>
    <!-- Add your CSS link here -->
    <!-- <link rel="stylesheet" href="home.css" /> -->
  </head>
  <style>
    /* General Styles */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f2f2f2;
      color: #333;
      overflow-x: hidden; /* Hide horizontal scrollbar */
    }

    h1 {
      font-family: Arial, sans-serif;
      color: #3498db;
    }
    .email-message {
      color: rgb(251, 250, 250);
      font-size: larger;
      right: 0;
      margin-left: 15%;
      font-weight: bolder;
    }
    .navbar {
      position: fixed;
      top: 0;
      width: 100%;
      background-color: #3498db;
      padding: 10px;
      color: #fff;
      text-align: center;
      z-index: 1000;
      display: flex;
      align-items: baseline;
    }

    .navbar ul {
      list-style-type: none;
      padding: 0;
      margin-left: 36%;
    }

    @media only screen and (max-width: 600px) {
      .navbar {
        display: block;
        justify-content: center;
        width: 100%;
      }

      .navbar ul {
        margin-left: 0;
      }

      .email-message {
        margin-left: auto;
        left: 0;
      }
    }

    .navbar ul li {
      display: inline;
      margin-right: 20px;
    }

    .navbar ul li a {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
    }

    .container {
      max-width: 100%;
      margin: 70px auto 20px auto;
      padding: 0 20px;
      overflow-y: auto;
      height: calc(100vh - 90px);
      text-align: center;
      box-sizing: border-box;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(
        auto-fill,
        minmax(300px, 1fr)
      ); /* Adjusted width */
      gap: 30px;
    }

    .village {
      background-color: #63adde;
      border: 1px solid #fcfafa;
      border-radius: 7px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Added light shadow */
    }

    .status-circle {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: inline-block;
    }
    .text {
      color: #fff;
      font-family: Arial, Helvetica, sans-serif;
      font-weight: 800;
    }
    .status-red {
      background-color: red;
    }

    h2 {
      color: #fff;
      font-family: Arial, Helvetica, sans-serif;
      font-weight: 800;
    }
    .status-orange {
      background-color: orange;
    }

    .status-green {
      background-color: green;
    }

    .footer {
      background-color: #3498db;
      color: #fff;
      text-align: center;
      padding: 20px 0;
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
    }
  </style>
  <body>
    <div class="navbar">
     
      <ul>
        <li><a href="#" id="homeLink" class="active">HOME</a></li>
        <!-- <li><a href="#" id="contactLink">CONTACT</a></li> -->
        <li><a href="#" id="adminLink">ADMIN</a></li>
        <li><a href="#" id="aboutLink">ABOUT</a></li>
        <li><a href="#" id="villagesLink">VILLAGES</a></li>
  
      </ul>

      <% if(email) { %>
      <p class="email-message"><%= email %></p>
      <% } %>
    </div>
    <div class="container">
      <h1>Form Submissions</h1>
      <% if (formData) { %> <% Object.keys(formData).forEach((key) => { %>
      <div>
        <div class="dec">
          <p>Name: <%= formData[key].name %></p>
          <p>Email: <%= formData[key].email %></p>
          <p>Message: <%= formData[key].message %></p>
          <p>Subject: <%= formData[key].subject %></p>
          <!-- Add more fields as needed -->
        </div>
      </div>
      <% }); %> <% } else { %>
      <p>No form submissions available.</p>
      <% } %>
    </div>
  </body>
  <script>
    // JavaScript code to handle navigation
    const homeLink = document.getElementById("homeLink");
    const aboutLink = document.getElementById("aboutLink");
    const villagesLink = document.getElementById("villagesLink");
    const adminLink = document.getElementById("adminLink")

    homeLink.addEventListener("click", () => {
      window.location.href = "/landing";
    });

    aboutLink.addEventListener("click", () => {
      window.location.href = "/about";
    });

    villagesLink.addEventListener("click", () => {
      window.location.href = "/villages";
    });
    villagesLink.addEventListener("click", () => {
      window.location.href = "/admin";
    });
  </script>
</html>
